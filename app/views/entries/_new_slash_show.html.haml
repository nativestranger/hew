.row
  .col-lg-10.mx-auto
    %h4.text-center
      New Entry
      = ' - '
      = @entry.call.name
    %hr

    = entry_progress_bar

    .mt-5
      - if @entry.new_record?
        = render 'start'
      - elsif @entry.invalid? # or other error from transaction - need if saving other records in it
        = render @previous_step.to_s
      - else
        = render step&.to_s || @entry.creation_status
