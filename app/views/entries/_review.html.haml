%p TODO: content for review

.form-inputs
  = simple_form_for @entry, url: wizard_path(@next_step, entry_id: @entry.id) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .d-none= f.input :creation_status, input_html: { value: @next_step, type: 'string' }
    - def @entry.entry_id; id; end
    .d-none= f.input :entry_id, input_html: { class: 'form-control' }, label: false

    .row
      .col-12
        .pull-right
          = f.button :submit, 'Submit',
                     class: 'btn btn-primary',
                     data: { confirm: "Are you sure? You can't make any changes after submitting." }
