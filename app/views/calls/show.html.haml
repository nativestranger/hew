.row
  .col-lg-10.mx-auto
    .row
      .col
        %h3
          = @call.name
          -# = "@ #{@call.venue.name}" if @call.venue

    .row.mb-4
      .col
        .btn-group
          - if policy(@call).edit?
            = link_to edit_call_path(@call), class: 'btn btn-sm btn-white border px-3' do
              %span
                %i.fa.fa-pencil
                -# Edit

          - if policy(@call).manage_users?
            = link_to call_call_users_path(@call), class: 'btn btn-sm btn-white border px-3' do
              %span
                %i.fa.fa-user
                -# Users

          - if policy(@call).view_entries?
            = link_to call_applications_path(@call), class: 'btn btn-sm btn-white border px-3' do
              %span
                %i.fa.fa-envelope
                -# Entries

    .row
      .col
        .row
          .col-md-6.mb-4
            - if @call.overview.present?
              %h6 Overview
              %p= @call.overview
            %h6 Deadline
            %p= I18n.l(@call.application_deadline, format: :long)
            - if @call.start_at && @call.end_at
              %h6 Event Dates
              %p= "#{I18n.l(@call.start_at, format: :long)} - #{I18n.l(@call.end_at, format: :long)}"
            - if @call.external?
              %h6 External URL
              %p= link_to @call.external_url, @call.external_url
            - if @call.categories.any?
              %h6 Categories
              %div
                - @call.categories.each do |category|
                  %span.badge.badge-success.p-2 #{category}

          - if @call.full_description.present?
            .col-md-6
              %h6 Description
              %p= @call.full_description.html_safe

              - if @call.application_details.present?
                %h6 Application Details
                %p= @call.application_details.html_safe

        %br
        %br
        %br
        %br

        .row.mt-4
          .col-md-8.mx-auto
            - if @call.is_public && !@call.external
              = render 'share_link'
