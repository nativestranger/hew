.container
  .row.mb-1.mt-1
    .col-12.search-options
      - call_types = [{ id: 1, name: 'Exhibition', selected: true }, { id: 2, name: 'Residency', selected: true }, { id: 3, name: 'Publication', selected: true }, { id: 4, name: 'Competition', selected: true }]
      = react_component "CallSearch", { call_types: call_types, call_type_icons: call_type_icons, page: (params[:page]&.to_i || 1) }

  -# - if @calls.none?
  -#   .row
  -#     .col-12
  -#       .alert.alert-warning.w-100
  -#         %p Darn, no available calls found.

  - false && @calls.each do |call|
    .row.mb-4.mt-2
      .col-12.mx-auto
        .card.border-0
          .card-header.bg-white.border-0.p-0
            .row
              .col-12
                %h5.mb-0
                  %span.rounded.p-2.fa.fa-sm{ class: fa_class_for_call(call) }
                  = link_to public_call_details_path(call) do
                    = call.name
                    - if call.venue
                      %h6.d-inline @ #{call.venue.name}

              -# .col-2.clearfix
              -#   .float-right
              -#     - if !call.internal? && current_user&.id == call.user_id
