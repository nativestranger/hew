              -#     - else
              -#       = link_to 'More Info', public_call_details_path(id: call.id)

              -# %span.float-md-right
              -#   %h7.text-muted.d-inline
              -#     Show opens:
              -#   %h7.d-inline= call.start_at.to_date.strftime("%B %d, %Y")
          .card-body.my-1.p-0
            %p.mb-0.text-truncate.text-muted= call.overview
          .card-footer.bg-white.border-0.p-0.text-muted
            .row
              .col-12
                .text-muted.small
                  -# Expires: #{call.application_deadline.to_date.strftime("%B %d, %Y")}
                  %span #{distance_of_time_in_words(Time.current, call.application_deadline)} left
