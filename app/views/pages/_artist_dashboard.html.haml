.d-flex.justify-content-between.mb-3
  %h3 My Applications
  = link_to 'My Shows', dashboard_path, class: 'btn btn-outline-success'

.card.fun-card
  .card-header.pb-0

    %ul.nav.nav-tabs
      %li.nav-item
        %a.nav-link{ id: 'accepted_and_active', href: dashboard_path(accepted_and_active: true, as_artist: true), class: artist_dashboard_show_applications_scope == :accepted_and_active ? 'active' : '' }
          Accepted (#{current_user.show_applications.accepted_and_active.count})
      %li.nav-item
        %a.nav-link{ id: 'pending', href: dashboard_path(pending: true, as_artist: true), class: artist_dashboard_show_applications_scope == :pending ? 'active' : '' }
          Pending (#{current_user.show_applications.pending.count})
      %li.nav-item
        %a.nav-link{ id: 'past', href: dashboard_path(past: true, as_artist: true), class: artist_dashboard_show_applications_scope == :past ? 'active' : '' }
          Past (#{current_user.show_applications.past.count})

  .list-group
    - @show_applications.each do |show_application|
      .list-group-item.list-group-item-action.border-left-0.border-right-0
        %h5.text-center

        %h3= "#{show_application.show.name} @ #{show_application.show.venue.name}"
        %p= "#{I18n.l(show_application.show.start_at, format: :long)} - #{I18n.l(show_application.show.end_at, format: :long)}"
        %p.text-muted= show_application.show.overview
